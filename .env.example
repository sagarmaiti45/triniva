# Vercel Environment Variables
# Copy this file to .env.local for local development
# Add these as environment variables in Vercel dashboard

# OpenRouter API
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://oofecaxnadoyqwxmyqtq.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database (PostgreSQL from Supabase)
DATABASE_URL=your_postgresql_connection_string_here

# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Secret (generate a random string)
JWT_SECRET=your_random_jwt_secret_here

# PayU Configuration (Optional - for payments)
PAYU_MERCHANT_KEY=your_payu_merchant_key
PAYU_MERCHANT_SALT=your_payu_salt
PAYU_BASE_URL=https://secure.payu.in

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://triniva.com